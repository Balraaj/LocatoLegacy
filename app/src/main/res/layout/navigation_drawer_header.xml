<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/drawerbackground">

    <TextView
        android:id="@+id/text_navigationHeader_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:text="TextView"
        android:textColor="#FFFF00"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/text_navigationHeader_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FFFF00"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/text_navigationHeader_email"
        android:layout_alignLeft="@+id/text_navigationHeader_email"
        android:layout_alignStart="@+id/text_navigationHeader_email"/>
</RelativeLayout>